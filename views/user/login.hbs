

<div class="container mt-5 ">

  <div class="row">
    <div class="col-md-6 ">

      <h2 class="text-center">Login</h2>



      {{#if adminLoginErr}}
      <p class="error mt-5">Invalid username or password</p>
      {{/if}}



      <form action="/userLogin" method="post">
      <div class="form-group mt-2">
        {{#if LoginErr}}
        <p class="error"> invalid username or password</p>
        {{/if}}
        <label for="">Email Address</label>
        <input class="form-control" type="email" name="Email" placeholder="Enter Email" id="email" required>
      </div>

      <div class="form-group mt-2">
        <label for="">password</label>
        <input class="form-control" type="password" name="Password" placeholder="Enter Password" id="password" required>
      </div>



      <a href="/signup">Create new account</a>
      <button type="submit" class="btn btn-primary float-right"> Login</button>









      </form>
    </div>


  </div>

</div>

<script>
  document.getElementById('loginForm').addEventListener('submit', function (event) {
    event.preventDefault(); // Prevent form submission

    // Get form inputs
    var emailInput = document.getElementById('email');
    var passwordInput = document.getElementById('password');

    // Perform validation
    var isValid = true;

    if (!validateEmail(emailInput.value.trim())) {
      isValid = false;
      emailInput.classList.add('error');
    } else {
      emailInput.classList.remove('error');
    }

    if (passwordInput.value.trim() === '') {
      isValid = false;
      passwordInput.classList.add('error');
    } else {
      passwordInput.classList.remove('error');
    }

    // Submit the form if valid
    if (isValid) {
      this.submit();
    }
  });

  function validateEmail(email) {
    // Email validation regular expression
    var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
  }

</script>



<style>
  .error {
    border-color: red;
  }
</style>